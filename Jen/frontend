pipeline {
    agent any

    stages {
        stage('Pull the source code') {
            steps {
                echo 'Building..'
            }
            post {
                always {
                    echo 'Always'
                }
                success {
                    echo 'Success'
                }
                unstable {
                    echo 'Unstable'
                }
                failure {
                    echo 'Failure'
                }
                changed {
                    echo 'Changed'
                }
            }
        }
    }
}